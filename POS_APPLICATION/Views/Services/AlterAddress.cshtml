@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Configuration.Json
@inject IConfiguration Configuration
<script type="text/javascript">
    const app_host_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_IP").Value);
    const api_port_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("POS_API_PNO").Value);
    const Result_API = (app_host_API + ":" + api_port_API);

    const global_host_API = @Json.Serialize(@Configuration.GetSection("Endpoint").GetSection("GLOBAL_API_IP").Value);
    const Global_API = (global_host_API);
    var getsession = window.sessionStorage.getItem("tokenIndex");
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="~/Assets/js/servicePos/alterAddr.js" defer></script>
<form action="/Services/UPDATE_HOMEADDRESS" method="post" class="form-horizontal">
    <div class="card">
        <div class="card-body card-funds">
            <div class="row flex-div">
                <div class="col-md-2">
                    <img src="~/Assets/images/SalaamSavings.png" id="image_logo" />
                </div>
                <div class="col-md-8">
                    <h2 class="text-lemonade text-primary text-center mt-3 mb-4">Change Address</h2>
                </div>
            </div>
            <div class="row mt-4 justify-content-center">
                <div class="col-md-6">
                    <div class="row mb-1">
                        <div class="col-md-8 mb-2 m-auto">
                            <div class="py-4">
                                <p class="clearfix">
                                    <span class="float-left">
                                        Status
                                    </span>
                                    <span class="float-right text-muted" id="status">
                                    </span>
                                </p>
                                <p class="clearfix">
                                    <span class="float-left">
                                        Full Name
                                    </span>
                                    <span class="float-right text-muted SUM_FULL_NAME">
                                    </span>
                                </p>
                                <p class="clearfix">
                                    <span class="float-left">
                                        CNIC
                                    </span>
                                    <span class="float-right text-muted" id="cnic">
                                    </span>
                                </p>
                                <p class="clearfix">
                                    <span class="float-left">
                                        Existing Address
                                    </span>
                                    <span class="float-right text-muted FSCA_ADDRESS1">
                                    </span>
                                </p>
                                <p class="clearfix">
                                    <span class="float-left">
                                        New Address
                                    </span>
                                    <input class="form-control mt-3" placeholder="House# 123" name="FSCA_ADDRESS1" id="FSCA_ADDRESS1" required />
                                    <input class="form-control mt-3" name="FSCA_ADDRESS_TYPE" id="FSCA_ADDRESS_TYPE" required hidden />
                                    <input class="form-control mt-3" name="FSCU_CUSTOMER_CODE" id="FSCU_CUSTOMER_CODE" required hidden />
                                    <input class="form-control mt-3" name="SUM_FULL_NAME" id="SUM_FULL_NAME" required hidden />
                                    <input class="form-control mt-3" name="emailAddress" id="emailAddress" required hidden />
                                    <input class="form-control mt-3" name="SUM_CUST_CONTPHONE" id="SUM_CUST_CONTPHONE" required hidden />
                                </p>
                                <p class="clearfix mt-3">
                                    <span class="float-left">
                                        Change City
                                    </span>
                                    <select class="form-control mb-2" name="FSCT_CITY_ID" id="FSCT_CITY_ID" onchange="setProvince(this.value)"><option value="">Select</option></select>
                                    <input class="form-control mb-2" name="FSSP_PROVINCE_ID" id="FSSP_PROVINCE_ID" hidden />
                                </p>
                                <button class="btn btn-success w-100 mt-4" type="submit" id="updateCustAddress">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>